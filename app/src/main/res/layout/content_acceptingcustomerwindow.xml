<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".acceptingcustomerwindow"
    tools:showIn="@layout/app_bar_acceptingcustomerwindow">
    <Button
        android:layout_below="@+id/select_vechile_group"

        android:id="@+id/CancelRequest"
        android:text="Cancel Request"
        android:background="@color/red_btn_bg_color"

        android:textColor="@color/quantum_white_text"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        />
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".acceptingcustomerwindow" />


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="520dp"
    android:paddingBottom="30dp"
    android:background="@color/red_btn_bg_color"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:cardElevation="20dp"

        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_image"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginRight="137dp"
            android:src="@drawable/avatar"
            app:civ_border_color="#5e1e1e1e"
            app:civ_border_width="1dp" />
        <TextView
            android:text="OTP:"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/quantum_black_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="5545"
            android:id="@+id/otpnumber"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageButton
            android:id="@+id/btn_call_driver1"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="264dp"
            android:layout_marginTop="33dp"

android:background="@color/quantum_white_100"
            android:src="@drawable/ic_call_black_524dp"

            />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginBottom="5dp"
            android:text="akshay"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_vechile_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/quantum_black_text"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"
            android:text="HR01AE8017"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="54dp"
            android:src="@drawable/ic_star_black_24dp" />

        <TextView
            android:id="@+id/txt_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="53dp"
            android:text="4.0"
            android:textSize="20sp" />


        android:textColor="@android:color/white" />

    </androidx.cardview.widget.CardView>






</RelativeLayout>











        </RelativeLayout>




