<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map_destination"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Map_destination_Select"
    tools:showIn="@layout/app_bar_map_destination__select">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Home" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pin30" />

    <androidx.cardview.widget.CardView
        android:layout_alignParentBottom="true"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_marginBottom="23dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <Button
                android:layout_below="@+id/select_vechile_group"

                android:id="@+id/btnPickupRequest"
                android:text="Choose Vechile"
                android:textStyle="bold"


                android:background="@drawable/btn_sign_in_background"

                android:textColor="@color/quantum_white_text"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"


                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
